<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#005c42" /> <!-- 背景色 -->
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:top="0dp" android:bottom="3dp" android:color="#00947a"> <!-- 上部と下部の2dpの線 -->
        <shape android:shape="rectangle">
            <solid android:color="#00947a" />
                <stroke
                    android:width="3dp"
                    android:color="#005c42" />
                <corners
                    android:radius="10dp" />
        </shape>
    </item>
</layer-list>